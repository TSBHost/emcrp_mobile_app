<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#2874F0" />
        <stroke
            android:width="1dp"
            android:color="#2874F0" />
        <corners
            android:radius="4dp" />
    </shape>
</item>
<item>
    <shape>
        <gradient
            android:startColor="#DF5327"
            android:centerColor="#A53512"
            android:endColor="#D5603B"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="@color/colorWhite" />
        <corners
            android:radius="4dp" />
    </shape>
</item>
</selector>